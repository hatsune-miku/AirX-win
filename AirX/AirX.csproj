    <None Remove="Pages\NewFilePage.xaml" />
    <None Remove="Pages\ReceivedFilesPage.xaml" />
    <None Remove="Pages\SelectPeerPage.xaml" />
    <None Remove="Pages\TrayMenuHolderPage.xaml" />
    <None Remove="View\AboutWindow.xaml" />
    <None Remove="View\MessageBoxWindow.xaml" />
    <None Remove="View\MicaTestPage.xaml" />
    <None Remove="View\NewFileWindow.xaml" />
    <None Remove="View\NewTextWindow.xaml" />
    <None Remove="View\SelectPeerWindow.xaml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Labs.WinUI.SettingsControls" Version="0.0.18" />
