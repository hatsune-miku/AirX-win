<Page
    x:Class="AirX.Pages.FigmaPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AirX.Pages"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    DataContext="ViewModel"
>
    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="600">
        <StackPanel Spacing="24" Margin="0, 24, 0, 0">

            <local:NewFilePage FileId="-1" />
            <local:NewTextPage />

            <CalendarView
                SelectionMode="Single"
                IsGroupLabelVisible="True"
                IsOutOfScopeEnabled="True"
                Language="en"
                CalendarIdentifier="GregorianCalendar" 
            />
        
            <RatingControl
                AutomationProperties.Name="Simple RatingControl" 
                IsClearEnabled="True"
                IsReadOnly="False" 
                Caption="Your rating"
            />
        </StackPanel>
    </ScrollViewer>
</Page>
